# NodeBB Environment Configuration
NODE_ENV=development

# Forum Configuration
FORUM_URL=https://community.arbvault.com
FORUM_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=root_pass_change_this
MONGO_USERNAME=nodebb
MONGO_PASSWORD=nodebb_pass_change_this

# Alternative: PostgreSQL (if using postgres profile)
POSTGRES_USER=nodebb
POSTGRES_PASSWORD=nodebb_pass_change_this

# Redis Configuration
REDIS_PASSWORD=redis_pass_change_this

# Medusa Integration
MEDUSA_BACKEND_URL=http://localhost:9000
MEDUSA_ADMIN_API_TOKEN=your-medusa-api-token

# Storage Configuration
STORAGE_BACKEND=s3
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=arbvault-community-assets
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# Cloudflare R2 Alternative
# STORAGE_BACKEND=r2
# S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# S3_REGION=auto
# S3_BUCKET=arbvault-community
# S3_ACCESS_KEY=your-r2-access-key
# S3_SECRET_KEY=your-r2-secret-key

# Gift/Download Configuration
CLAIM_URL_TTL_SECONDS=600

# Reputation Configuration
REP_MIN_AGE_HOURS=24
REP_DAILY_CAP=5
REP_DECAY_ENABLED=true
REP_DECAY_RATE=0.1
REP_DECAY_THRESHOLD=50

# Rate Limiting
RATE_LIMITS_ENTER=5/10m
RATE_LIMITS_CLAIM=3/1h
RATE_LIMITS_API=100/1m

# Giveaway Configuration
DRAW_CRON=0 * * * *
GIVEAWAY_WEBHOOK_SECRET=your-webhook-secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=ArbVault Community <noreply@arbvault.com>

# Admin Configuration
ADMIN_EMAIL=admin@arbvault.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-admin-password

# Security
CSRF_SECRET=your-csrf-secret-change-this
COOKIE_SECRET=your-cookie-secret-change-this

# Analytics (Optional)
GA_TRACKING_ID=UA-XXXXXXXXX-X
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id